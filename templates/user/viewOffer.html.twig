{% extends 'base.html.twig' %} {% block body %}
<h1>Job Offers</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Department</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {% for job in jobs %}
    <tr>
      <td>{{ job.title }}</td>
      <td>{{ job.type }}</td>
      <td>{{ job.departement }}</td>
      <td>{{ job.description }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
